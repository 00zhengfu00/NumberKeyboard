<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:alpha="0.7"
              android:background="@color/pagebg_gray"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edittext_del"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="1"
                    android:textSize="36sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="2"
                    android:textSize="36sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="3"
                    android:textSize="36sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="4"
                    android:textSize="36sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="5"
                    android:textSize="36sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="6"
                    android:textSize="36sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="7"
                    android:textSize="36sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="8"
                    android:textSize="36sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="9"
                    android:textSize="36sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="@dimen/number_size_w"
                    android:layout_height="@dimen/number_size_h"
                    android:background="@drawable/number_btn_bg"
                    android:text="0"
                    android:textSize="36sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn_check"
                    android:layout_width="@dimen/number_check_w"
                    android:layout_height="@dimen/number_check_h"
                    android:background="@drawable/btn_check_bg"
                    android:text="验证"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>